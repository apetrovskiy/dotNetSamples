@model IEnumerable<WorkingWithVisualStudio.Models.Product>
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Working with Visual Studio</title>
</head>
<body>
<h3>Products</h3>
<table>
    <thead>
    <tr><td>Name</td><td>Price</td></tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            @*<td>@p.Price</td>*@
            <td>@($"{p.Price:C2}")</td>
        </tr>
    }
</table>
<div>

</div>
</body>
</html>